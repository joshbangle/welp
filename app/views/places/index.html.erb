<div class="d-flex justify-content-center page-buttons">
  <%= paginate @places %>
</div>

<div class="container">
  <% @places.each do |place| %>
    <div class="booyah-box col-6 offset-3">
      <h1><%= link_to place.name, place_path(place) %></h1>
      <i><%= place.address %></i>
      <p><%= place.description %></p>
      
      <% if place.user.present? %>
        <small>Submitted by <%= place.user.email %></small>
      <% end %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center page-buttons">
  <%= paginate @places %>
</div> 