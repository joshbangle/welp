<div class="d-flex justify-content-center page-buttons">
  <%= paginate @places %>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner" role="listbox">
    <div class="carousel-item active">
      <%= image_tag 'Slider1.jpg', class: "d-block img-fluid" %>
      <div class="carousel-caption d-none d-md-block">
        <h2>Amazing eats, amazing people</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'Slider2.jpg', class: "d-block img-fluid" %>
      <div class="carousel-caption d-none d-md-block">
        <h2>Find your new go-to</h3>
      </div>
    </div>
    <div class="carousel-item">
      <%= image_tag 'slider3.jpg', class: "d-block img-fluid" %>
      <div class="carousel-caption d-none d-md-block">
        <h2>Food, and a view? Yes please.</h3>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="row">
  <% @places.each do |place| %>

    <div class="booyah-box col-5 ml-auto mr-auto">
      <h1><%= link_to place.name, place_path(place) %></h1>
      <i><%= place.address %></i>
      <% if place.photos.present? %>
        <%= image_tag place.photos.first.picture.url, class: 'image-resize' %>
      <% end %>
      <br /><br />
      <p><%= place.description %></p>


      <!-- Last Comment -->
    <% if place.comments.present? %>
    <hr />
      <div class= "col-12">
          <blockquote>
            <% if place.comments.last.humanized_rating.present? %>
              <b><%= place.comments.last.humanized_rating %></b> -
            <% end %>
            <%= place.comments.last.message %>
            <small class="float-right">-<%= place.comments.last.user.email %></small>
          </blockquote>
      </div>
    <% end %>

      <!--Created by-->
      <% if place.user.present? %>
        <small>Submitted by <%= place.user.email %></small>
      <% end %>
    </div>
  <% end %>
</div>
</div>
<div class="d-flex justify-content-center page-buttons">
  <%= paginate @places %>
</div> 